{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "import/no-unresolved": "\\.scss$",
    "import/prefer-default-export": "off",
    "no-default-export": true, /* FIXME "https://github.com/benmosher/eslint-plugin-import/pull/936" */
    "react/jsx-filename-extension": "off"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "plugins": [
    "jest"
  ],
  "globals": {
    "VARIABLES": true,
    "createElement": true,
    "mockConsole": true,
    "mockStyle": true,
    "TestImports": true
  }
}
