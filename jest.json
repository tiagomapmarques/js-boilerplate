{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/app/**/*.js",
    "!src/app/*/**/index.js"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleFileExtensions": [
    "js",
    "scss"
  ],
  "setupFiles": [
    "<rootDir>/src/testing/jest"
  ],
  "testRegex": "^.+\\.spec\\.js$",
  "transform": {
    "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
    "^.+\\.scss$": "<rootDir>/node_modules/jest-css-modules-transform"
  },
  "transformIgnorePatterns": []
}
