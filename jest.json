{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/app/**/*.js",
    "!src/app/components/**/index.js",
    "!src/app/*/index.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleFileExtensions": [
    "js",
    "scss"
  ],
  "setupFiles": [
    "./src/testing/jest"
  ],
  "testRegex": "^.+\\.spec\\.js$",
  "transform": {
    "^.+\\.js$": "babel-jest",
    "^.+\\.scss$": "jest-css-modules-transform"
  },
  "transformIgnorePatterns": []
}
