{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/app/**/*.js",
    "src/app/**/*.ts",
    "!src/app/**/*.d.ts",
    "!src/app/components/**/index.js",
    "!src/app/components/**/index.ts",
    "!src/app/*/index.js",
    "!src/app/*/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleFileExtensions": [
    "js",
    "ts",
    "scss"
  ],
  "moduleNameMapper": {
    "^testing$": "<rootDir>/src/testing",
    "^components/(.*)": "<rootDir>/src/app/components/$1",
    "^services$": "<rootDir>/src/app/services"
  },
  "setupFiles": [
    "./src/testing/jest"
  ],
  "testRegex": "^.+\\.spec\\.(j|t)s$",
  "transform": {
    "^.+\\.js$": "babel-jest",
    "^.+\\.ts$": "ts-jest",
    "^.+\\.scss$": "jest-css-modules-transform"
  },
  "transformIgnorePatterns": []
}
