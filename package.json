{
  "name": "js-boilerplate",
  "version": "0.11.3",
  "author": "Tiago Marques",
  "description": "Boilerplate for any javascript frontend project",
  "keywords": [
    "javascript",
    "frontend",
    "boilerplate",
    "seed",
    "typescript",
    "jquery",
    "react",
    "inferno",
    "vue",
    "web-components"
  ],
  "repository": "https://github.com/tiagomapmarques/js-boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "yarn build:local",
    "build:dev": "webpack --progress --bail --env dev",
    "build:dev:watch": "yarn build:dev --watch",
    "build:local": "webpack --progress --bail --env local",
    "build:local:watch": "yarn build:local --watch",
    "build:prod": "webpack --progress --bail --env prod",
    "build:prod:watch": "yarn build:prod --watch",
    "clean": "yarn clean:coverage && yarn clean:generated",
    "clean:coverage": "rimraf coverage",
    "clean:generated": "rimraf public && rimraf *.log",
    "clean:packages": "rimraf node_modules",
    "clean:reset": "yarn clean && rimraf yarn.lock && yarn clean:packages",
    "lint": "yarn lint:code && yarn lint:style && yarn lint:tests",
    "lint:code": "eslint --config .eslintrc.json . --ignore-pattern *.spec.js --ignore-pattern src/testing",
    "lint:style": "stylelint \"**/*.scss\" --config .stylelintrc.json",
    "lint:tests": "eslint --config .eslintrc.spec.json **/*.spec.js src/testing",
    "serve": "ws --directory public --spa index.html --log.format dev",
    "serve:open": "yarn serve --open",
    "serve:secure": "yarn serve --compress --http2",
    "start": "yarn build && yarn serve:open",
    "test": "jest --no-cache --config jest.json",
    "test:watch": "yarn test --watchAll",
    "watch": "yarn build:local:watch"
  },
  "dependencies": {
    "autoprefixer": "~9.1",
    "babel-core": "~6.26",
    "babel-loader": "~7.1",
    "babel-plugin-module-resolver": "~3.1",
    "babel-preset-env": "~1.7",
    "babel-preset-stage-2": "~6.24",
    "browser-polyfills": "~1.4",
    "clean-webpack-plugin": "~0.1",
    "copy-webpack-plugin": "~4.5",
    "critical": "~1.3",
    "critical-css-webpack-plugin": "~0.2",
    "css-loader": "~1.0",
    "extended-define-webpack-plugin": "~0.1",
    "favicons-webpack-plugin": "~0.0",
    "file-loader": "~2.0",
    "html-webpack-plugin": "~3.2",
    "load-entry": "~1.1",
    "manifest-json-webpack-plugin": "~1.0",
    "mini-css-extract-plugin": "~0.4",
    "node-sass": "~4.9",
    "path": "~0.12",
    "postcss-loader": "~3.0",
    "prerender-spa-plugin": "~3.3",
    "rimraf": "~2.6",
    "sass-loader": "~7.1",
    "webpack": "~4.17",
    "webpack-cli": "~3.1"
  },
  "devDependencies": {
    "babel-eslint": "~8.2",
    "babel-jest": "~23.4",
    "eslint": "~5.4",
    "eslint-config-airbnb-base": "~13.1",
    "eslint-import-resolver-babel-module": "~4.0",
    "eslint-plugin-import": "~2.14",
    "eslint-plugin-jest": "~21.21",
    "jest": "~23.5",
    "jest-css-modules-transform": "~2.0",
    "jest-fetch-mock": "~1.6",
    "local-web-server": "~2.6",
    "stylelint": "~9.5",
    "stylelint-config-recommended-scss": "~3.2",
    "stylelint-scss": "~3.3",
    "webpack-livereload-plugin": "~2.1"
  }
}
