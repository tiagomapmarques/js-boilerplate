{
  "name": "js-boilerplate",
  "version": "0.3.0",
  "repository": "https://github.com/tiagomapmarques/js-boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "assets": "npm run clean:generated && npm run assets:copy",
    "assets:copy": "copyfiles -u 1 ./src/assets/* ./public/",
    "build:dev": "npm run assets && webpack --progress --bail --env dev",
    "build:local": "npm run assets && webpack --progress --bail --env local",
    "build:local:watch": "npm run assets && webpack --progress --bail --env local --watch",
    "build:prod": "npm run assets && webpack --progress --bail --env prod",
    "clean": "npm run clean:coverage && npm run clean:generated && npm run clean:packages",
    "clean:coverage": "rimraf ./coverage",
    "clean:generated": "rimraf ./public",
    "clean:packages": "echo ==== IGNORE THIS NEXT ERROR ==== && rimraf ./node_modules",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint .",
    "lint:style": "stylelint \"**/*.scss\" --config .stylelintrc",
    "packages": "ncu",
    "packages:write": "ncu -u",
    "packages:reset": "rimraf package-lock.json && npm run clean:packages",
    "serve": "http-server ./public -p 8000 -a localhost -o",
    "serve:prod": "http-server ./public -p 80",
    "start": "npm run build:local && npm run serve",
    "test": "jest --no-cache",
    "test:watch": "jest --no-cache --watchAll",
    "watch": "npm run build:local:watch"
  },
  "dependencies": {
    "babel-core": "~6.26",
    "babel-eslint": "~8.0",
    "babel-loader": "~7.1",
    "babel-plugin-module-resolver": "~2.7",
    "babel-preset-env": "~1.6",
    "babel-preset-stage-2": "~6.24",
    "browser-polyfills": "~0.3",
    "copyfiles": "~1.2",
    "css-loader": "~0.28",
    "favicons-webpack-plugin": "~0.0",
    "file-loader": "~1.1",
    "html-loader": "~0.5",
    "html-webpack-plugin": "~2.30",
    "http-server": "~0.10",
    "node-sass": "~4.6",
    "path": "~0.12",
    "rimraf": "~2.6",
    "sass-loader": "~6.0",
    "style-loader": "~0.19",
    "webpack": "~3.8"
  },
  "devDependencies": {
    "babel-jest": "~21.2",
    "eslint": "~4.10",
    "eslint-config-standard": "~10.2",
    "eslint-plugin-import": "~2.8",
    "eslint-plugin-jest": "~21.2",
    "eslint-plugin-node": "~5.2",
    "eslint-plugin-promise": "~3.6",
    "eslint-plugin-standard": "~3.0",
    "jest": "~21.2",
    "jest-fetch-mock": "~1.3",
    "npm-check-updates": "~2.13",
    "stylelint": "~8.2",
    "stylelint-config-standard": "~17.0",
    "webpack-livereload-plugin": "~1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/app/*.{js}",
      "src/app/**/*.{js}"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "scss"
    ],
    "setupFiles": [
      "<rootDir>/src/testing/setup.js"
    ],
    "testRegex": "^.+\\.spec\\.js$",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  }
}
