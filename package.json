{
  "name": "js-boilerplate",
  "version": "0.3.0",
  "repository": "https://github.com/tiagomapmarques/js-boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "assets": "npm run clean:generated && npm run assets:copy",
    "assets:copy": "copyfiles -u 1 ./src/assets/* ./public/",
    "build:dev": "npm run assets && npm run build:webpack && webpack --progress --bail --env dev",
    "build:local": "npm run assets && npm run build:webpack && webpack --progress --bail --env local",
    "build:local:watch": "npm run assets && npm run build:webpack && webpack --progress --bail --env local --watch",
    "build:prod": "npm run assets && npm run build:webpack && webpack --progress --bail --env prod",
    "build:webpack": "tsc -p ./tsconfig.webpack.json",
    "clean": "npm run clean:coverage && npm run clean:generated && npm run clean:packages",
    "clean:coverage": "rimraf ./coverage",
    "clean:generated": "rimraf ./public && rimraf ./*.js && rimraf ./environments/**/*.js",
    "clean:packages": "echo ==== IGNORE THIS NEXT ERROR ==== && rimraf ./node_modules",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "npm run lint:webpack && tslint -p tsconfig.json -c tslint.json",
    "lint:webpack": "tslint -p tsconfig.webpack.json -c tslint.json",
    "lint:style": "stylelint \"**/*.scss\" --config .stylelintrc",
    "packages": "ncu",
    "packages:write": "ncu -u",
    "packages:reset": "rimraf package-lock.json && npm run clean:packages",
    "serve": "http-server ./public -p 8000 -a localhost -o",
    "serve:prod": "http-server ./public -p 80",
    "start": "npm run build:local && npm run serve",
    "test": "jest --no-cache",
    "test:watch": "jest --no-cache --watchAll",
    "watch": "npm run build:local:watch"
  },
  "dependencies": {
    "@types/html-webpack-plugin": "~2.28",
    "@types/jest": "~21.1",
    "@types/webpack": "~3.0",
    "browser-polyfills": "~0.3",
    "copyfiles": "~1.2",
    "css-loader": "~0.28",
    "favicons-webpack-plugin": "~0.0",
    "file-loader": "~1.1",
    "html-loader": "~0.5",
    "html-webpack-plugin": "~2.30",
    "http-server": "~0.10",
    "jest": "~21.2",
    "jest-fetch-mock": "~1.3",
    "node-sass": "~4.6",
    "npm-check-updates": "~2.13",
    "path": "~0.12",
    "rimraf": "~2.6",
    "sass-loader": "~6.0",
    "style-loader": "~0.19",
    "stylelint": "~8.2",
    "stylelint-config-standard": "~17.0",
    "ts-jest": "~21.1",
    "ts-loader": "~3.1",
    "tslint": "~5.8",
    "tslint-config-standard": "~7.0",
    "typescript": "~2.6",
    "webpack": "~3.8",
    "webpack-livereload-plugin": "~1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/app/*.{ts}",
      "src/app/**/*.{ts}"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.spec.json"
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "scss"
    ],
    "moduleNameMapper": {
      "^app/(.*)": "<rootDir>/src/app/$1"
    },
    "setupFiles": [
      "<rootDir>/src/testing/setup.ts"
    ],
    "testRegex": "^.+\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
