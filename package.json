{
  "name": "js-boilerplate",
  "version": "0.9.2",
  "author": "Tiago Marques",
  "description": "Boilerplate for any javascript frontend project",
  "keywords": [
    "javascript",
    "frontend",
    "boilerplate",
    "seed"
  ],
  "repository": "https://github.com/tiagomapmarques/js-boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run build:local",
    "build:dev": "webpack --progress --bail --env dev",
    "build:dev:watch": "webpack --progress --bail --env dev --watch",
    "build:local": "webpack --progress --bail --env local",
    "build:local:watch": "webpack --progress --bail --env local --watch",
    "build:prod": "webpack --progress --bail --env prod",
    "build:prod:watch": "webpack --progress --bail --env prod --watch",
    "clean": "npm run clean:coverage && npm run clean:generated && npm run clean:packages",
    "clean:coverage": "rimraf coverage",
    "clean:generated": "rimraf public",
    "clean:packages": "echo ==== IGNORE THIS NEXT ERROR ==== && rimraf node_modules",
    "clean:reset": "rimraf package-lock.json && npm run clean",
    "lint": "npm run lint:code && npm run lint:style && npm run lint:tests",
    "lint:code": "eslint --config .eslintrc.json --ignore-pattern *.spec.js --ignore-pattern src/testing/**/*.js .",
    "lint:style": "stylelint \"**/*.scss\" --config .stylelintrc.json",
    "lint:tests": "eslint --config .eslintrc.spec.json ./**/*.spec.js src/testing/**/*.js",
    "serve": "ws --directory public --spa index.html --log.format dev",
    "serve:secure": "ws --directory public --spa index.html --log.format dev --https",
    "start": "npm run build && npm run serve",
    "test": "jest --no-cache --config jest.json",
    "test:watch": "jest --no-cache --watchAll --config jest.json",
    "watch": "npm run build:local:watch"
  },
  "dependencies": {
    "babel-core": "~6.26",
    "babel-loader": "~7.1",
    "babel-plugin-module-resolver": "~3.1",
    "babel-preset-env": "~1.6",
    "babel-preset-stage-2": "~6.24",
    "browser-polyfills": "~1.4",
    "clean-webpack-plugin": "~0.1",
    "copy-webpack-plugin": "~4.5",
    "css-loader": "~0.28",
    "extended-define-webpack-plugin": "~0.1",
    "favicons-webpack-plugin": "~0.0",
    "file-loader": "~1.1",
    "html-webpack-plugin": "~3.2",
    "load-entry": "~1.1",
    "manifest-json-webpack-plugin": "~0.1",
    "mini-css-extract-plugin": "~0.4",
    "node-sass": "~4.9",
    "path": "~0.12",
    "prerender-spa-plugin": "~2.1",
    "rimraf": "~2.6",
    "sass-loader": "~7.0",
    "webpack": "~4.6",
    "webpack-cli": "~2.1"
  },
  "devDependencies": {
    "babel-eslint": "~8.2",
    "babel-jest": "~22.4",
    "eslint": "~4.19",
    "eslint-config-airbnb-base": "~12.1",
    "eslint-import-resolver-babel-module": "~4.0",
    "eslint-plugin-import": "~2.11",
    "eslint-plugin-jest": "~21.15",
    "jest": "~22.4",
    "jest-css-modules-transform": "~2.0",
    "jest-fetch-mock": "~1.5",
    "local-web-server": "~2.5",
    "stylelint": "~9.2",
    "stylelint-config-recommended-scss": "~3.2",
    "stylelint-scss": "~3.1",
    "webpack-livereload-plugin": "~2.1"
  }
}
