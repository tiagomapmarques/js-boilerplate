{
  "name": "js-boilerplate",
  "version": "0.13.0",
  "author": "Tiago Marques",
  "description": "Boilerplate for any javascript frontend project",
  "keywords": [
    "javascript",
    "frontend",
    "boilerplate",
    "seed",
    "typescript",
    "jquery",
    "react",
    "inferno",
    "vue",
    "web-components"
  ],
  "repository": "https://github.com/tiagomapmarques/js-boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.12.3"
  },
  "scripts": {
    "build": "yarn build:local",
    "build:dev": "webpack --progress --bail --env dev",
    "build:dev:watch": "yarn build:dev --watch",
    "build:local": "webpack --progress --bail --env local",
    "build:local:watch": "yarn build:local --watch",
    "build:prod": "webpack --progress --bail --env prod",
    "build:prod:watch": "yarn build:prod --watch",
    "lint": "yarn lint:code && yarn lint:style && yarn lint:tests && yarn lint:config",
    "lint:code": "eslint --config .eslintrc.json --ignore-pattern *.spec.js --ignore-pattern *.spec.ts --ext .js --ext .ts src/app",
    "lint:config": "yarn lint:config:code && yarn lint:config:tests",
    "lint:config:code": "eslint --config .eslintrc.json --ignore-pattern *.spec.js --ignore-pattern *.spec.ts --ext .js --ext .ts config typings",
    "lint:config:tests": "eslint --config .eslintrc.spec.json --ext .js --ext .ts src/testing",
    "lint:style": "stylelint --config .stylelintrc.json \"src/**/*.scss\"",
    "lint:tests": "eslint --config .eslintrc.spec.json --ext .spec.js --ext .spec.ts src/app",
    "serve": "ws --directory public --spa index.html --log.format dev --open",
    "serve:secure": "yarn serve --compress --http2",
    "start": "yarn build && yarn serve",
    "test": "jest --no-cache --config jest.json",
    "test:watch": "yarn test --watchAll",
    "watch": "yarn build:local:watch"
  },
  "dependencies": {
    "@babel/core": "~7.2",
    "@babel/plugin-proposal-class-properties": "~7.2",
    "@babel/preset-env": "~7.2",
    "@babel/preset-typescript": "~7.1",
    "@babel/register": "~7.0",
    "autoprefixer": "~9.4",
    "babel-loader": "~8.0",
    "babel-plugin-module-resolver": "~3.1",
    "browser-polyfills": "~1.4",
    "clean-webpack-plugin": "~1.0",
    "copy-webpack-plugin": "~4.6",
    "critical": "~1.3",
    "critical-css-webpack-plugin": "~0.2",
    "css-loader": "~2.1",
    "dotenv": "~6.2",
    "extended-define-webpack-plugin": "~0.1",
    "favicons-webpack-plugin": "~0.0",
    "html-webpack-plugin": "~3.2",
    "load-entry": "~1.1",
    "manifest-json-webpack-plugin": "~1.0",
    "mini-css-extract-plugin": "~0.5",
    "node-sass": "~4.11",
    "path": "~0.12",
    "postcss-loader": "~3.0",
    "prerender-spa-plugin": "~3.4",
    "sass-loader": "~7.1",
    "webpack": "~4.28",
    "webpack-cli": "~3.2"
  },
  "devDependencies": {
    "@types/jest": "~23.3",
    "@types/node": "~10.12",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "~23.6",
    "eslint": "~5.12",
    "eslint-config-airbnb-base": "~13.1",
    "eslint-plugin-import": "~2.14",
    "eslint-plugin-jest": "~22.1",
    "eslint-plugin-typescript": "~1.0 || ^1.0.0-rc.0",
    "jest": "~23.6",
    "jest-css-modules-transform": "~2.1",
    "jest-fetch-mock": "~2.1",
    "local-web-server": "~2.6",
    "stylelint": "~9.10",
    "stylelint-config-recommended-scss": "~3.2",
    "stylelint-config-standard": "~18.2",
    "stylelint-scss": "~3.5",
    "typescript": "~3.1",
    "webpack-livereload-plugin": "~2.2"
  }
}
