{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "module": "commonjs",
    "outDir": "./public/assets",

    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/browser-polyfills/typings",
      "typings"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
